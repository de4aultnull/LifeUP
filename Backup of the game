    <script>
        // Initialize settings if they don't exist
        if(!localStorage.getItem('language')) {
            localStorage.setItem('language', 'fr');
            document.documentElement.lang = 'fr';
        } else {
            document.documentElement.lang = localStorage.getItem('language');
        }
        
        if(!localStorage.getItem('volume')) {
            localStorage.setItem('volume', '80');
        }
        
        // Initialize game data if it doesn't exist
        if(!localStorage.getItem('gameData')) {
            const initialGameData = {
                username: 'Joueur',
                level: 0,
                xp: 0,
                nextLevelXP: 20, // 20 XP pour passer de niveau 0 √† 1
                stats: {
                    strength: 0,
                    intelligence: 0,
                    money: 0,
                    aura: 0,
                    karma: 0
                },
                completedTasks: [],
                activeGoals: []
            };
            localStorage.setItem('gameData', JSON.stringify(initialGameData));
        }
        
        // Load game data
        const gameData = JSON.parse(localStorage.getItem('gameData'));
        
        // Set background music volume
        const bgMusic = document.getElementById('bgMusic');
        bgMusic.volume = localStorage.getItem('volume') / 100;
        bgMusic.play().catch(e => console.log("Autoplay prevented, user interaction required"));
        
        // Initialize DOM elements
        const settingsBtn = document.getElementById('settingsBtn');
        const closeSettingsBtn = document.getElementById('closeSettingsBtn');
        const settingsPanel = document.getElementById('settingsPanel');
        const volumeSlider = document.getElementById('volumeSlider');
        const volumeValue = document.getElementById('volumeValue');
        const langFrBtn = document.getElementById('langFrBtn');
        const langEnBtn = document.getElementById('langEnBtn');
        const saveSettingsBtn = document.getElementById('saveSettingsBtn');
        const logoutBtn = document.getElementById('logoutBtn');
        
        // Game elements
        const playerName = document.getElementById('playerName');
        const gameUsername = document.getElementById('gameUsername');
        const playerLevel = document.getElementById('playerLevel');
        const strengthValue = document.getElementById('strengthValue');
        const intelligenceValue = document.getElementById('intelligenceValue');
        const moneyValue = document.getElementById('moneyValue');
        const auraValue = document.getElementById('auraValue');
        const karmaValue = document.getElementById('karmaValue');
        
        // Check if user is logged in
        const googleUser = localStorage.getItem('googleUser');
        if (googleUser) {
            const userData = JSON.parse(googleUser);
            document.getElementById("gameUserPic").src = userData.picture;
            gameUsername.textContent = gameData.username;
            playerName.textContent = gameData.username;
        }
        
        // Update game stats
        function updateGameStats() {
            playerLevel.textContent = gameData.level;
            strengthValue.textContent = `Niv. ${gameData.stats.strength}/100`;
            document.querySelector('.stat-progress.bg-red-500').style.width = `${gameData.stats.strength}%`;
            
            intelligenceValue.textContent = `Niv. ${gameData.stats.intelligence}/100`;
            document.querySelector('.stat-progress.bg-blue-500').style.width = `${gameData.stats.intelligence}%`;
            
            moneyValue.textContent = `${gameData.stats.money} ‚Ç¨`;
            document.querySelector('.stat-progress.bg-green-500').style.width = `${gameData.stats.money}%`;
            
            auraValue.textContent = `Niv. ${gameData.stats.aura}/100`;
            document.querySelector('.stat-progress.bg-purple-500').style.width = `${gameData.stats.aura}%`;
            
            karmaValue.textContent = `Niv. ${gameData.stats.karma}/100`;
            document.querySelector('.stat-progress.bg-yellow-500').style.width = `${gameData.stats.karma}%`;
            
            // Update XP bar
            const progressPercent = (gameData.xp / gameData.nextLevelXP) * 100;
            document.getElementById('xpBar').style.width = `${progressPercent}%`;
            document.getElementById('currentLevelText').textContent = `Niveau ${gameData.level}`;
            document.getElementById('xpText').textContent = `${gameData.xp}/${gameData.nextLevelXP} XP`;
            document.getElementById('nextLevelText').textContent = `Niveau ${gameData.level + 1}`;
        }
        
        // Complete task function
        function completeTask(taskId, rewards) {
            // Update stats based on rewards
            if (rewards.strength) gameData.stats.strength = Math.min(gameData.stats.strength + rewards.strength, 100);
            if (rewards.intelligence) gameData.stats.intelligence = Math.min(gameData.stats.intelligence + rewards.intelligence, 100);
            if (rewards.money) gameData.stats.money = Math.min(gameData.stats.money + rewards.money, 100);
            if (rewards.aura) gameData.stats.aura = Math.min(gameData.stats.aura + rewards.aura, 100);
            if (rewards.karma) gameData.stats.karma = Math.min(gameData.stats.karma + rewards.karma, 100);
            
            // Add XP (1 XP per reward point)
            const xpGained = (rewards.strength || 0) + (rewards.intelligence || 0) + 
                           (rewards.money || 0) + (rewards.aura || 0) + (rewards.karma || 0);
            gameData.xp += xpGained;
            
            // Check for level up
            while (gameData.xp >= gameData.nextLevelXP) {
                gameData.xp -= gameData.nextLevelXP;
                gameData.level++;
                gameData.nextLevelXP = 20 * (gameData.level + 1); // 40 XP pour niveau 1->2, 60 pour 2->3 etc.
                showLevelUpNotification();
            }
            
            // Update progression bar
            const progressPercent = (gameData.xp / gameData.nextLevelXP) * 100;
            document.getElementById('xpBar').style.width = `${progressPercent}%`;
            document.getElementById('currentLevelText').textContent = `Niveau ${gameData.level}`;
            document.getElementById('xpText').textContent = `${gameData.xp}/${gameData.nextLevelXP} XP`;
            document.getElementById('nextLevelText').textContent = `Niveau ${gameData.level + 1}`;
            
            // Save updated data
            localStorage.setItem('gameData', JSON.stringify(gameData));
            updateGameStats();
            
            // Show reward notification
            showRewardNotification(rewards);
        }
        
        // Show reward notification
        function showRewardNotification(rewards) {
            const notification = document.createElement('div');
            notification.className = 'fixed bottom-4 right-4 px-4 py-3 bg-green-600 text-white rounded-lg shadow-lg flex items-center';
            
            let rewardsText = 'R√©compenses: ';
            const rewardsList = [];
            
            if (rewards.strength) rewardsList.push(`+${rewards.strength} Force`);
            if (rewards.intelligence) rewardsList.push(`+${rewards.intelligence} Intelligence`);
            if (rewards.money) rewardsList.push(`+${rewards.money} ‚Ç¨`);
            if (rewards.aura) rewardsList.push(`+${rewards.aura} Aura`);
            if (rewards.karma) rewardsList.push(`+${rewards.karma} Karma`);
            
            rewardsText += rewardsList.join(', ');
            
            notification.innerHTML = `
                <i class="fas fa-check-circle mr-2"></i>
                <span>${rewardsText}</span>
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }
        
        // Show level up notification
        function showLevelUpNotification() {
            const notification = document.createElement('div');
            notification.className = 'fixed inset-0 flex items-center justify-center z-50 bg-black bg-opacity-70';
            
            notification.innerHTML = `
                <div class="bg-slate-800 rounded-xl p-8 max-w-md text-center">
                    <div class="w-20 h-20 rounded-full bg-yellow-500 flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-trophy text-3xl text-white"></i>
                    </div>
                    <h2 class="text-2xl font-bold mb-2">Niveau Sup√©rieur!</h2>
                    <p class="text-xl mb-6">Vous √™tes maintenant niveau ${gameData.level}!</p>
                    <button id="closeLevelUp" class="px-6 py-2 rounded-full bg-blue-500 hover:bg-blue-600 font-medium transition">
                        Continuer
                    </button>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            document.getElementById('closeLevelUp').addEventListener('click', () => {
                notification.remove();
            });
        }
        
        // Event listeners for task completion buttons
        document.querySelectorAll('.task-card button').forEach(button => {
            button.addEventListener('click', function() {
                const taskCard = this.closest('.task-card');
                const taskTitle = taskCard.querySelector('h3').textContent;
                
                // Determine rewards based on task (in a real app, this would come from a database)
                let rewards = {};
                if (taskTitle.includes('sport')) {
                    rewards = { strength: 1, money: 1 };
                } else if (taskTitle.includes('lire')) {
                    rewards = { intelligence: 1, money: 1 };
                } else if (taskTitle.includes('m√©diter')) {
                    rewards = { karma: 1, money: 1 };
                } else if (taskTitle.includes('Complimenter')) {
                    rewards = { aura: 1, money: 1 };
                } else if (taskTitle.includes('√âconomiser')) {
                    rewards = { money: 2, intelligence: 1 };
                }
                
                completeTask(taskTitle, rewards);
                
                // Disable the task
                this.disabled = true;
                this.textContent = 'Termin√©';
                this.classList.remove('bg-green-500', 'hover:bg-green-600');
                this.classList.add('bg-gray-500');
                taskCard.classList.add('opacity-60');
            });
        });
        
        // Load settings
        function loadSettings() {
            const language = localStorage.getItem('language') || 'fr';
            const volume = localStorage.getItem('volume') || '80';
            
            // Update document language
            document.documentElement.lang = language;
            
            // Apply language visibility
            document.querySelectorAll('.lang-fr').forEach(el => {
                el.style.display = language === 'fr' ? 'block' : 'none';
            });
            document.querySelectorAll('.lang-en').forEach(el => {
                el.style.display = language === 'en' ? 'block' : 'none';
            });
            
            // Update language buttons
            if(language === 'fr') {
                langFrBtn.classList.add('bg-blue-500');
                langFrBtn.classList.remove('bg-slate-700', 'hover:bg-slate-600');
                langEnBtn.classList.add('bg-slate-700', 'hover:bg-slate-600');
                langEnBtn.classList.remove('bg-blue-500');
            } else {
                langEnBtn.classList.add('bg-blue-500');
                langEnBtn.classList.remove('bg-slate-700', 'hover:bg-slate-600');
                langFrBtn.classList.add('bg-slate-700', 'hover:bg-slate-600');
                langFrBtn.classList.remove('bg-blue-500');
            }
            
            // Apply volume
            volumeSlider.value = volume;
            volumeValue.textContent = `${volume}%`;
            document.getElementById('bgMusic').volume = volume / 100;
        }
        
        // Save settings
        function saveSettings() {
            const language = document.documentElement.lang;
            const volume = volumeSlider.value;
            
            localStorage.setItem('language', language);
            localStorage.setItem('volume', volume);
            document.getElementById('bgMusic').volume = volume / 100;
            
            // Show confirmation message
            const message = document.createElement('div');
            message.className = 'fixed bottom-4 right-4 px-4 py-2 bg-green-500 text-white rounded-lg shadow-lg';
            message.textContent = language === 'fr' ? 'Param√®tres sauvegard√©s!' : 'Settings saved!';
            document.body.appendChild(message);
            
            setTimeout(() => {
                message.remove();
            }, 2000);
        }
        
        // Logout function
        function logout() {
            localStorage.removeItem('googleUser');
            window.location.href = 'index.html'; // Redirect to login page
        }
        
        // Event listeners
        settingsBtn.addEventListener('click', () => {
            settingsPanel.classList.add('active');
        });
        
        closeSettingsBtn.addEventListener('click', () => {
            settingsPanel.classList.remove('active');
        });
        
        langFrBtn.addEventListener('click', () => {
            localStorage.setItem('language', 'fr');
            loadSettings();
        });
        
        langEnBtn.addEventListener('click', () => {
            localStorage.setItem('language', 'en');
            loadSettings();
        });
        
        volumeSlider.addEventListener('input', () => {
            volumeValue.textContent = `${volumeSlider.value}%`;
            bgMusic.volume = volumeSlider.value / 100;
        });
        
        saveSettingsBtn.addEventListener('click', () => {
            saveSettings();
            settingsPanel.classList.remove('active');
        });
        
        logoutBtn.addEventListener('click', logout);
        
        // Initialize the game
        updateGameStats();
        loadSettings();
    </script>
</body>
</html>
